задание 20 язык C++
#include <iostream>
using namespace std;

// Функция для проверки коллинеарности
bool areCollinear(int x1, int y1, int x2, int y2, int x3, int y3) {
    // Проверка с использованием формулы площади треугольника
    // Если площадь треугольника равна нулю, то точки лежат на одной прямой
    return (x1 * (y2 - y3) + x2 * (y3 - y1) + x3 * (y1 - y2)) == 0;
}

int main() {
    // Координаты трех точек
    int x1, y1, x2, y2, x3, y3;

    // Ввод координат
    cout << "Введите координаты точки A (x1, y1): ";
    cin >> x1 >> y1;
    cout << "Введите координаты точки B (x2, y2): ";
    cin >> x2 >> y2;
    cout << "Введите координаты точки C (x3, y3): ";
    cin >> x3 >> y3;

    // Проверяем коллинеарность
    if (areCollinear(x1, y1, x2, y2, x3, y3)) {
        cout << "Точки A, B и C лежат на одной прямой." << endl;
    } else {
        cout << "Точки A, B и C не лежат на одной прямой." << endl;
    }

    return 0;
}
