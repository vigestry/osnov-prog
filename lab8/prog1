задание 5 язык C++
#include <iostream>
using namespace std;

int main() {
    int n;

    // Ввод размера матрицы
    cout << "Введите размер квадратной матрицы (n x n): ";
    cin >> n;

    // Объявление матрицы
    int matrix[n][n];

    // Ввод элементов матрицы
    cout << "Введите элементы матрицы:" << endl;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            cin >> matrix[i][j];
        }
    }

    // Проверка элементов главной диагонали
    bool found = false; // Флаг для проверки
    for (int i = 0; i < n; i++) {
        if (matrix[i][i] > 0 && matrix[i][i] % 2 != 0) { // Положительный и нечётный
            found = true;
            break;
        }
    }

    // Вывод результата
    if (found) {
        cout << "На главной диагонали есть хотя бы один положительный нечётный элемент." << endl;
    } else {
        cout << "На главной диагонали нет положительных нечётных элементов." << endl;
    }

    return 0;
}
