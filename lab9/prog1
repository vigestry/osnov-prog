задание 47 язык C
#include <stdio.h>

int main() {
    int a, b; // Логические переменные (0 или 1)
    int result;

    // Ввод логических переменных
    printf("Введите значение первой переменной (0 или 1): ");
    scanf("%d", &a);

    printf("Введите значение второй переменной (0 или 1): ");
    scanf("%d", &b);

    // Проверка корректности ввода
    if ((a != 0 && a != 1) || (b != 0 && b != 1)) {
        printf(" введите только 0 или 1.\n");
        return 1; // Завершение программы с кодом ошибки
    }

    // Логическая операция "сложение по модулю 2" (XOR)
    result = a ^ b;

    // Вывод результата
    printf("Результат сложения по модулю 2: %d\n", result);

    return 0;
}
